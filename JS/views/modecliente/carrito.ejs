<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Document</title>
</head>

<body>
    <% if (user){%>
        <%- include('../includes/header-cliente.ejs') %>          
    <%}else{%>
        <%- include('../includes/header-cliente-login.ejs') %>
    <%}%>
    
    <div class="container">
        <br>
        <h3>Carrito de compras</h3>
        <br>
        <div>
            <table class="table">
                <thead>
                    <th>Producto</th>
                    <th>Precio</th>
                    <th>Cantidad</th>
                    <th>Imagen</th>                    
                    <th></th>
                </thead>
                <tbody>
                    <% data.forEach(item =>{ %>
                    <tr>
                        <td><%= item.nombre %></td>
                        <td><%= item.precio %></td>
                        <td><%= item.cantidad %></td>
                        <td><img src="<%= item.url %>" alt="" width="100"></td>
                        <td class="text-right">
                            <a href="/delete-carrito?id=<%= item.id %>" class="btn btn-danger">Eliminar</a>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>

    <%- include('../includes/footer-cliente.ejs') %>

</body>

</html>